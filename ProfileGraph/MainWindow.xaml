            <Label Content="СП" HorizontalAlignment="Left" Margin="62,897,0,0" Background="Black" Foreground="White" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
            <Label Content="СО" HorizontalAlignment="Left" Margin="62,946,0,0" Background="Black" Foreground="White" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
            <Label Content="СП" HorizontalAlignment="Left" Margin="62,1203,0,0" Background="Black" Foreground="White" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
