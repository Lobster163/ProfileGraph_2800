            <Grid x:Name="gridGrafActualUhod_1" VerticalAlignment="Top" Margin="20,630,20,0" Height="300" IsManipulationEnabled="True" Background="#FFDADADA">
                <oxy:Plot x:Name="plot1" Title="{Binding Title_1}" IsEnabled="False" TitleFontSize="24" LegendFontSize="17" Background="#FFDADADA" Foreground="White">
                    <oxy:Plot.Axes >
                        <oxy:LinearAxis Position="Bottom" Minimum="0" Maximum="{Binding AxisX_max}"/>
                        <oxy:LinearAxis Position="Left" Minimum="{Binding leftMin_1}" Maximum="{Binding leftMax_1}" IntervalLength="25"/>
                    </oxy:Plot.Axes>
                    <oxy:Plot.Series>
                        <oxy:LineSeries ItemsSource="{Binding Points_1}" LineStyle="Automatic" StrokeThickness="5" Color="Red" Title="Клеть 1"/>
                        <oxy:LineSeries ItemsSource="{Binding Points_0}" LineStyle="Automatic" StrokeThickness="1" Color="Black" />
                        <oxy:LineSeries ItemsSource="{Binding Points_100}" LineStyle="Automatic" StrokeThickness="1" Color="Black" />
                        <oxy:LineSeries ItemsSource="{Binding Points_m100}" LineStyle="Automatic" StrokeThickness="1" Color="Black" />
