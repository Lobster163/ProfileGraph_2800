                          Background="#FFDADADA" Foreground="White">
                    <oxy:Plot.Axes>
                        <oxy:LinearAxis Position="Bottom" Minimum="0" Maximum="{Binding AxisX_max}"/>
                        <oxy:LinearAxis Position="Left" Minimum="{Binding leftMin_2}" Maximum="{Binding leftMax_2}" IntervalLength="25"/>
                    </oxy:Plot.Axes>
                    <oxy:Plot.Series>
                        <oxy:LineSeries ItemsSource="{Binding Points_2}" LineStyle="Automatic" StrokeThickness="5" Color="Green" Title="Клеть 2"/>
