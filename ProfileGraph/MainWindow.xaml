                <oxy:Plot x:Name="plot3" Title="{Binding Title_3}" IsManipulationEnabled="False" IsMouseWheelEnabled="False" IsEnabled="False" LegendFontSize="17" TitleFontSize="24" Margin="0,2,0,-2"
                          Background="#FFDADADA" Foreground="White">
                    <oxy:Plot.Axes>
                        <oxy:LinearAxis Position="Bottom" Minimum="0" Maximum="{Binding AxisX_max}"/>
                        <oxy:LinearAxis Position="Left" Minimum="{Binding leftMin_3}" Maximum="{Binding leftMax_3}" IntervalLength="25"/>
                    </oxy:Plot.Axes>
