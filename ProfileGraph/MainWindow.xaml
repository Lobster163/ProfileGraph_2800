                        <oxy:LineSeries ItemsSource="{Binding Points_m150}" LineStyle="Automatic" StrokeThickness="1" Color="Black" />
                        <oxy:LineSeries ItemsSource="{Binding Points_200}" LineStyle="Automatic" StrokeThickness="1" Color="Black" />
                        <oxy:LineSeries ItemsSource="{Binding Points_m200}" LineStyle="Automatic" StrokeThickness="1" Color="Black" />
                    </oxy:Plot.Series>
                </oxy:Plot>
            </Grid>
            <Grid x:Name="gridGrafActualUhod_34" VerticalAlignment="Top" Margin="20,1550,20,0" Height="300" IsManipulationEnabled="True" Background="#FFDADADA">
                <oxy:Plot x:Name="plot4" Title="{Binding Title_45}" IsManipulationEnabled="False" IsMouseWheelEnabled="False" IsEnabled="False" LegendFontSize="17" TitleFontSize="24" Margin="0,2,0,-2"
                          Background="#FFDADADA" Foreground="White">
                    <oxy:Plot.Axes>
                        <oxy:LinearAxis Position="Bottom" Minimum="0" Maximum="{Binding AxisX_max}"/>
                        <oxy:LinearAxis Position="Left" Minimum="{Binding leftMin45}" Maximum="{Binding leftMax45}" IntervalLength="25"/>
                    </oxy:Plot.Axes>
                    <oxy:Plot.Series>
                        <oxy:LineSeries ItemsSource="{Binding Points_4}" LineStyle="Automatic" StrokeThickness="5" Color="Black" Title="Клеть 4"/>
                        <oxy:LineSeries ItemsSource="{Binding Points_5}" LineStyle="Automatic" StrokeThickness="5" Color="DarkViolet" Title="Клеть 5"/>
                        <oxy:LineSeries ItemsSource="{Binding Points_0}" LineStyle="Automatic" StrokeThickness="1" Color="Black"/>
                        <oxy:LineSeries ItemsSource="{Binding Points_100}" LineStyle="Automatic" StrokeThickness="1" Color="Black" />
                        <oxy:LineSeries ItemsSource="{Binding Points_m100}" LineStyle="Automatic" StrokeThickness="1" Color="Black" />
                        <oxy:LineSeries ItemsSource="{Binding Points_150}" LineStyle="Automatic" StrokeThickness="1" Color="Black" />
